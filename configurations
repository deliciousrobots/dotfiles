# just software build configurations

# Ubuntu/Mint prerequisites
sudo apt-get install git mercurial screen ruby1.9.1-full ruby1.9.1-dev ncurses-dev

# useful folders
mkdir -p ~/opt/bin
mkdir ~/build

# in dotfiles folder:
cd ~/projects/dotfiles
git submodule init
git submodule update
# build Command-T
cd .vim/bundle/command-t/ruby/command-t
ruby extconf.rb
make

# vim
# Centos: sudo yum install ncurses-devel
cd ~/build
hg clone https://vim.googlecode.com/hg/ vim
cd vim/src
./configure --prefix=${HOME}/opt --enable-rubyinterp --disable-netbeans --enable-multibyte
make
make install

# Clojure environ
# lein first
cd
wget https://raw.github.com/technomancy/leiningen/stable/bin/lein
chmod +x lein
mv lein ~/opt/bin/lein
lein
# then nailgun
cd ~/build
wget http://blog.deliciousrobots.com/static/nailgun-0.7.1.zip
unzip nailgun-0.7.1.zip
cd nailgun-0.7.1
make
cp ng ~/opt/bin/
# lein-nailgun install (the ones in clojars do not work)
cd ~/projects
git clone git://github.com/ibdknox/lein-nailgun.git
cd lein-nailgun
lein install
mkdir ~/.lein/plugins
cp lein-nailgun-1.1.1.jar ~/.lein/plugins/
# in a project's project.clj, make sure these deps exist:
#                  [org.clojure/clojure "1.3.0"]
#                  [vimclojure/server "2.3.0"]
# `lein deps`
# `lein nailgun`


